{% extends "sprint2RealEstateAdminBundle::admin_layout.html.twig" %}
    {% block Image %}
        <img src="{{ image }}" class="img-circle" alt="User Image" />
    {% endblock %}
    {% block AganceActive %}
        class="active treeview"
    {% endblock %}

    {% block AganceCore %}
       
        <!-- Main content -->
        <section class="content">
          <div class="row">
            <div class="col-xs-12">
             

              <div class="box">
                <div class="box-header">
                  <h3 class="box-title"></h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                  <table id="example1" class="table table-bordered table-striped">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Agant</th>
                        <th>Gouvernorat</th>
                        <th>Ville</th>
                        <th>Code postal</th>
                        <th>Description</th>
                        <th>+/-</th>
                      </tr>
                    </thead>
                    <tbody>
                      
                      
                      {% for agance in agance %}
                            <tr>
                              <td>{{agance.id}}</td>
                              <td>{{agance.nom}}</td>
                              <td>{{agance.idGerant.nom}} {{agance.idGerant.prenom}}</td>
                              <td>{{agance.idAdresse.gouvernorat}}</td>
                              <td>{{agance.idAdresse.ville}}</td>
                              <td>{{agance.idAdresse.codepostal}}</td>
                              <td> <textarea>{{agance.description}}</textarea></td>
                              <td><a href = "{{ path ("sprint2_real_estate_admin_agence_supp",{'id':agance.id})}}"><button class="btn btn-default btn-sm"><i class="fa fa-trash-o"></i></button></a></td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot>
                      <tr>
                        <th>#</th>
                        <th>Nom</th>
                        <th>Agant</th>
                        <th>Gouvernorat</th>
                        <th>Ville</th>
                        <th>Code postal</th>
                        <th>Description</th>
                        <th>+/-</th>
                      </tr>
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->
            </div><!-- /.col -->
            <!-- Ajout des gerant   -->
            <div class="col-xs-12">
            <!--                                                                         -->
            <div class="box box-danger direct-chat direct-chat-danger">
            <div class="box-header with-border">
              <h3 class="box-title">Ajout</h3>
              <div class="box-tools pull-right">
                
                  <button class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
               
              </div>
            </div><!-- /.box-header -->
            <div class="box-body">
                <form method="POST">
                <table id="mytab" class="table table-bordered table-striped">
                    <thead>
                      <tr>                     
                        <th>Nom</th>
                        <th>Agant</th>
                        <th>Gouvernorat / Ville / Code postal</th>
                        <th>Description</th>
                      </tr>
                    </thead>
                    
                    <tbody>
                        <tr>
                            <td><input type="text" name="nom"/></td>
                            <td><select name="agant">
                            {% for utilisateur in utilisateur %}
                            <option value="{{utilisateur.id}}">{{utilisateur.nom}} {{utilisateur.prenom}}</option>
                            {% endfor %}                           
                            </select></td>

                            <td><select name="adresse">
                            {% for adresse in adresse %}
                            <option value="{{adresse.id}}">{{adresse.gouvernorat}} / {{adresse.ville}} / {{adresse.codepostal}}</option>
                            {% endfor %}                           
                            </select></td>   
                            <td> <textarea name="description"></textarea></td>
                        </tr>
                    </tbody>
                  </table>
                    <div class="box-footer">
                      <div class="pull-right">
                        <span class="input-group-btn">
                          <input type="submit" name="Submit" value="Ajouter" class="btn btn-danger btn-flat"/>
                        </span>
                      <div class="with-border "></div>
                    </div><!-- /.box-footer-->
                    </div>
                </form>
          </div><!--/.direct-chat -->
            </div>
          </div><!-- /.row -->
        </section><!-- /.content -->
      
        
       <!-- jQuery 2.1.3 -->
    <script src="{{ asset('bundles/sprint2realestateadmin/plugins/jQuery/jQuery-2.1.3.min.js') }}"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="{{ asset('js/bootstrap.js') }}" type="text/javascript"></script>
    <!-- DATA TABES SCRIPT -->
    <script src="{{ asset('bundles/sprint2realestateadmin//plugins/datatables/jquery.dataTables.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/sprint2realestateadmin/plugins/datatables/dataTables.bootstrap.js') }}" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="{{ asset('bundles/sprint2realestateadmin/plugins/slimScroll/jquery.slimscroll.min.js') }}" type="text/javascript"></script>
    <!-- FastClick -->
    <script src="{{ asset('bundles/sprint2realestateadmin/plugins/fastclick/fastclick.min.js') }}"></script>
    <!-- AdminLTE App -->
    <script src="{{ asset('bundles/sprint2realestateadmin//js/app.min.js') }}" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="{{ asset('bundles/sprint2realestateadmin//js/demo.js" type="text/javascript') }}"></script>
    <!-- page script --> 
      <script type="text/javascript">
      $(function () {
        $("#example1").dataTable();
      });
    </script>
    {% endblock %}